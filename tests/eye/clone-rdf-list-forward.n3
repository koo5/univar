@prefix : <http://jmv.fr#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.

kb

# clone an RDF list by a forward recursion - design pattern

:l0 rdf:first :v0 ;
    rdf:rest  :l1 .
:l1 rdf:first :v1 ;
    rdf:rest  :l2 .
:l2 rdf:first :v2 ;
    rdf:rest  rdf:nil .

# initial condition
:l0c :clone_of :l0 .

{
  ?L rdf:first ?F .
  ?L rdf:rest  ?R .
  ?LC :clone_of ?L .
} => {
  ?LC :first ?F .
  ?LC :rest ?rc .
  ?rc :clone_of ?R .
} .
fin.
query
{:l0c :clone_of ?b.} => {:l0c :clone_of ?b.}.
fin.
