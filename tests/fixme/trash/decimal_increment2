kb
(?X).
{ [ ] rdf:first ?X; rdf:rest ?L} <= { ?L rdf:rest [ ] }.


rdf:nil has_carry 0. rdf:nil has_succ_and_carry rdf:nil.
{?x has_succ_and_carry ?y. ?x rdf:first ?yf. ?x rdf:rest ?xrs. ?x has_carry 0} <= {
	?y rdf:first ?yf.
	?x rdf:rest ?xr.
	?xr has_succ_and_carry ?xrs.
	?xr has_carry 0.
}.
{?x has_succ_and_carry ?y. ?x rdf:first ?yfs. ?x rdf:rest ?xrs. ?x has_carry_and_carry ?xfs_carry} <= {
	?x rdf:rest ?xr.
	?xr has_succ ?xrs.
	?xr has_succ_and_carry 1.
	?x rdf:first ?xf.
	?xf digit_succ ?xfs.
	?xf has_digit_carry ?fff.
}.
{?x has_succ ?y} <= {?x has_succ_and_carry ?ys. ?ys has_carry 0}.
{?x has_succ ?y. ?x rdf:first "1". ?x rdf:rest ?ys} <= {?x has_succ_and_carry ?ys. ?ys has_carry 1}.

"0" digit_succ "1".
"1" digit_succ "2".
"2" digit_succ "3".
"3" digit_succ "4".
"4" digit_succ "5".
"5" digit_succ "6".
"6" digit_succ "7".
"7" digit_succ "8".
"8" digit_succ "9".
"9" digit_succ "0".

"1" is nonzero.
"2" is nonzero.
"3" is nonzero.
"4" is nonzero.
"5" is nonzero.
"6" is nonzero.
"7" is nonzero.
"8" is nonzero.
"9" is nonzero.

"0" digit_carry "1".
{?x digit_carry "0"} <= {?x is nonzero}.

{
 ?x decimal_succ ?y.
 ?y rdf:first ?d2.
 ?y rdf:rest rdf:nil.
 ?x carry ?c.
}<={
 ?x rdf:first ?d1.
 ?x rdf:rest rdf:nil.
 ?d1 digit_succ ?d2.
 ?d2 digit_carry ?c.
}.

{
 ?x decimal_succ ?y.
 ?y rdf:first ?d2.
 ?y rdf:rest ?ys.
 ?y carry ?c.
}<={
 ?x rdf:first ?d1.
 ?x rdf:rest ?xs.
 ?xs rdf:first ?something.
 ?xs carry "1".
 ?d1 digit_succ ?d2.
 ?d2 digit_carry ?c.
 ?xs decimal_succ ?ys.
}.

{
 ?x decimal_succ ?y.
 ?y rdf:first ?d1.
 ?y rdf:rest ?ys.
 ?y carry "0".
}<={
 ?x rdf:first ?d1.
 ?x rdf:rest ?xs.
 ?xs rdf:first ?something.
 ?xs carry "0".
 ?xs decimal_succ ?ys.
}.

fin.

