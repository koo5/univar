(?X).
{ [ ] rdf:first ?X; rdf:rest ?L} <= { ?L rdf:rest [ ] }.

:zero a :Nat.
{?x a :Nat. ?y :has_succ ?x.} <= {?y a :Nat}.

{rdf:nil :has_len :zero} <= {}.
{?list :has_len ?len} <= {?list rdf:rest ?rest. ?rest :has_len ?rest_len. ?rest_len :has_succ ?len.}.

