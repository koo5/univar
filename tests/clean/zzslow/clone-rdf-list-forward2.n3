# clone an RDF list by a forward recursion - design pattern

:l0 rdf:first :v0 ;
    rdf:rest  :l1 .
:l1 rdf:first :v1 ;
    rdf:rest  :l2 .
:l2 rdf:first :v2 ;
    rdf:rest  rdf:nil .

# initial condition
:l0c :clone_of :l0 .

{
  ?L rdf:first ?F .
  ?L rdf:rest  ?R .
  ?LC :clone_of ?L .
} => {
  ?LC rdf:first ?F .
  ?LC rdf:rest ?rc .
  ?rc :clone_of ?R .
} .
fin.

